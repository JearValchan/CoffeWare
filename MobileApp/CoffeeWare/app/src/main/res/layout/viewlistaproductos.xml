<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="15dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/deepGrey"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="monospace"
                    android:textSize="15dp"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:text="Producto: "/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/deepGrey"
                    android:fontFamily="monospace"
                    android:textSize="15dp"
                    android:maxLength="15"
                    android:id="@+id/textview_nombreproducto"
                    android:text="Frape"/>

            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="monospace"
                    android:textColor="@color/deepGrey"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:text="Categoria"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/textview_categoria"
                    android:fontFamily="monospace"
                    android:textColor="@color/deepGrey"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:text="Alimentos"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit_black"
                    android:layout_marginHorizontal="5dp"
                    android:layout_gravity="end"
                    android:background="@android:color/transparent"
                    android:id="@+id/btn_editarProducto"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete_black"
                    android:layout_marginHorizontal="5dp"
                    android:layout_gravity="end"
                    android:background="@android:color/transparent"
                    android:onClick="eliminarProducto"
                    android:id="@+id/btn_eliminarProducto"/>


            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="monospace"
                    android:textColor="@color/deepGrey"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:text="Precio"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/textview_Precio"
                    android:fontFamily="monospace"
                    android:textColor="@color/deepGrey"
                    android:textAlignment="textStart"
                    android:gravity="start"
                    android:text="$15"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="15dp"
                    android:layout_gravity="start"

                    android:layout_marginRight="5dp"

                    android:text="ID:"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_gravity="start"
                    android:textColor="@color/deepGrey"
                    android:fontFamily="monospace"
                    android:text="1"
                    android:id="@+id/textview_idproducto"/>
            </TableRow>




        </TableLayout>




    </LinearLayout>

