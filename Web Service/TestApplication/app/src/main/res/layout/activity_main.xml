<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/registroProducto"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="#036281"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="75dp">

        <EditText
            android:id="@+id/idProducto"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:hint="@string/id"
            android:gravity="center"
            />

        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="@string/buscar"/>

    </LinearLayout>

    <EditText
        android:id="@+id/tipoProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/tipo"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"/>

    <EditText
        android:id="@+id/nombreProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nombre"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"/>

    <EditText
        android:id="@+id/precioBaseProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/precioBase"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"/>

    <EditText
        android:id="@+id/idCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/categoria"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"/>

    <Button
        android:id="@+id/btnAgregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/agregar"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="10dp"/>

    <Button
        android:id="@+id/btnEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/editar"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"/>

    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/eliminar"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"/>

    <Button
        android:id="@+id/btnLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lista"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"/>

</LinearLayout>